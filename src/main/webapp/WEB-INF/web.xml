<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>br.com.coralgestaocoristas.coral.controller.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CoristaServlet</servlet-name>
        <servlet-class>br.com.coralgestaocoristas.coral.controller.CoristaServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CoristaServlet</servlet-name>
        <url-pattern>/coristas</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MusicoServlet</servlet-name>
        <servlet-class>br.com.coralgestaocoristas.coral.controller.MusicoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MusicoServlet</servlet-name>
        <url-pattern>/musicos</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AgendaServlet</servlet-name>
        <servlet-class>br.com.coralgestaocoristas.coral.controller.AgendaServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AgendaServlet</servlet-name>
        <url-pattern>/agenda</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PresencaServlet</servlet-name>
        <servlet-class>br.com.coralgestaocoristas.coral.controller.PresencaServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PresencaServlet</servlet-name>
        <url-pattern>/presencas</url-pattern>
    </servlet-mapping>
</web-app>
